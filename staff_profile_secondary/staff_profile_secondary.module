/**
 * Pull in the feeds
 */
function staff_profile_secondary_handle_feeds() {
  // Get all Staff Profile nodes
  $nids = \Drupal::entityQuery('node')->condition('type', 'staff_profile')->execute();
  $nodes =  Node::loadMultiple($nids);

  $fromFeed = file_get_contents('http://local.test/staffdir/feeds/county/story');
  $profiles = json_decode($fromFeed, TRUE);

  $count = 0;

  foreach ($profiles as $profile) {

    // Find the node that matches the profile, if one exists
    $mynode = '';
    foreach ($nodes as $node) {
      if (strtolower($node->field_staff_profile_email->value) == strtolower($profile['field_staff_profile_email'])) {
        $mynode = $node;
        break;
      }
    }

    // Create node if one's not found
    if (empty($mynode)) {
      $mynode = Node::create(array('type' => 'staff_profile', 'title' => $profile['title']));
    }

    // Handle the title and body
    $mynode->setTitle($profile['title']);
    $mynode->set('body', $profile['body']);
    $mynode->body->format = 'basic';

    // Handle all the normal fields
    $mynode->set('field_staff_profile_first_name', $profile['field_staff_profile_first_name']);
    $mynode->set('field_staff_profile_last_name', $profile['field_staff_profile_last_name']);
    $mynode->set('field_staff_profile_email', $profile['field_staff_profile_email']);
    $mynode->set('field_staff_profile_netid', $profile['field_staff_profile_netid']);
    $mynode->set('field_staff_profile_pref_name', $profile['field_staff_profile_pref_name']);
    $mynode->set('field_staff_profile_pref_phone', $profile['field_staff_profile_pref_phone']);
    $mynode->set('field_staff_profile_pref_title', $profile['field_staff_profile_pref_title']);
    $mynode->set('field_staff_profile_staffid', $profile['field_staff_profile_staffid']);
    $mynode->set('field_staff_profile_departmentid', $profile['field_staff_profile_departmentid']);
    $mynode->set('field_staff_profile_job_title', $profile['field_staff_profile_job_title']);
    $mynode->set('field_staff_profile_phone', $profile['field_staff_profile_phone']);
    $mynode->set('field_staff_profile_fax', $profile['field_staff_profile_fax']);
    $mynode->set('field_staff_profile_college', $profile['field_staff_profile_college']);
    $mynode->set('field_staff_profile_location', $profile['field_staff_profile_location']);
    $mynode->set('field_staff_profile_region', (!empty($profile['field_staff_profile_region']) && (intval($profile['field_staff_profile_region']) > 0)) ? $profile['field_staff_profile_region'] : '');
    $mynode->set('field_staff_profile_cty_dept', $profile['field_staff_profile_cty_dept']);

    // Handle the address field
    $mynode->field_staff_profile_addr = array(
      'country_code' => $profile['field_staff_profile_addr_country_code'],
      'address_line1' => $profile['field_staff_profile_addr_address_line1'],
      'address_line2' => $profile['field_staff_profile_addr_address_line2'],
      'locality' => $profile['field_staff_profile_addr_locality'],
      'administrative_area' => $profile['field_staff_profile_addr_administrative_area'],
      'postal_code' => $profile['field_staff_profile_addr_postal_code'],
    );


    // Handle the base county
    $taxonomy = taxonomy_term_load_multiple_by_name($profile['field_staff_profile_base_county'], 'counties_in_iowa');
    $base_county = (!empty($taxonomy) ? array_keys($taxonomy)[0] : 0);
    $mynode->field_staff_profile_base_county = [['target_id' => $base_county]];

    // Handle the program areas field
    $mynode->field_staff_profile_pgm_areas = [array()];
    $temp_array = explode(', ', $profile['field_staff_profile_pgm_areas']);
    foreach ($temp_array as $index => $temp_term) {
      $taxon = taxonomy_term_load_multiple_by_name($temp_term, 'program_areas');
      if (!empty($taxon) && array_keys($taxon)[0] > 0) {
        $mynode->field_staff_profile_pgm_areas[] = ['target_id' => array_keys($taxon)[0]];
      }
    }

    // Handle counties served
    $mynode->field_staff_profile_cty_served = [array()];
    $temp_array = explode(', ', $profile['field_staff_profile_cty_served']);
    foreach ($temp_array as $index => $temp_term) {
      $taxon = taxonomy_term_load_multiple_by_name($temp_term, 'counties_in_iowa');
      if (!empty($taxon) && array_keys($taxon)[0] > 0) {
        $mynode->field_staff_profile_cty_served[] = ['target_id' => array_keys($taxon)[0]];
      }
    }

    $mynode->set('field_staff_profile_stale', FALSE);
    $mynode->setPublished();
    $mynode->save();

    $count++;
  }

  // Log a message to ensure it ran
  \Drupal::logger('staff_profile_secondary')->info('Number of Staff Imported: ' . $count);
}
